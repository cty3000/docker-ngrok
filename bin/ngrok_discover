#!/bin/bash

if [ "$1" = "/bin/sh" ]; then
  shift
fi

if [ -n "$HTTPS_PORT" ]; then
  FWD="`echo $HTTPS_PORT | sed 's|^tcp://||'`"
elif [ -n "$HTTP_PORT" ]; then
  FWD="`echo $HTTP_PORT | sed 's|^tcp://||'`"
elif [ -n "$1" ]; then
  FWD="$1"
else
  echo "Must be run with a link aliased to http or https, an environmental variable (HTTP_PORT), or passed as a command."
  echo "=> Example: docker run --link app:http cty3000/ngrok"
  echo "=> Example: docker run -e HTTP_PORT 8080 cty3000/ngrok"
  echo "=> Example: docker run cty3000/ngrok 80"
  exit 1
fi

case "$1" in
  -h|help)  ARGS=$1 ;;
  *)        ARGS="--config $HOME/ngrok.yml $FWD" ;;
esac

#set -x
#exec /bin/ngrok http $ARGS
/bin/ngrok http $ARGS &

if [ -n "$WEBHOOK_URL" ]; then
  sleep 3
  NGROK_HOST=`/sbin/route | /usr/bin/awk 'NR==3 {print $2}'`
  URL=`/usr/bin/curl -s "http://$NGROK_HOST:4040/api/tunnels/command_line" | /usr/bin/jq -r .public_url`
  /usr/bin/curl -s -X POST -H 'Content-type: application/json' --data "{\"text\":\"ngrok URL: $URL\"}" $WEBHOOK_URL
fi
